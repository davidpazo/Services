<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datohosting.services"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.datohosting.services.MenuPrincipal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name="com.datohosting.services.MiServiceIntent"/>
        <service android:name="com.datohosting.services.MiService"/>
        <service android:name="com.datohosting.services.MiServiceForeground"/>
        <service android:name="com.datohosting.services.MiServiceIBinder"/>
        <service android:name="com.datohosting.services.MiServiceMessenger"/>
        
    </application>

</manifest>
